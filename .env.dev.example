# ============================================================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION EXAMPLE
# ============================================================================
# Copy this file to .env.dev and update with your values
# cp .env.dev.example .env.dev
# ============================================================================

# Server Configuration
NODE_ENV=development
PORT=5001
API_VERSION=v1
HOST=0.0.0.0
SKIP_EMAIL_VERIFICATION=true
TZ=America/New_York

# Database (DEVELOPMENT DATABASE)
MONGODB_URI=mongodb://localhost:27017/did-optimizer-dev

# JWT Secrets (use same as production for token compatibility)
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# Google OAuth (DEV)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:5001/api/v1/auth/google/callback

# Frontend URL (DEV)
FRONTEND_URL=http://localhost:5001
API_BASE_URL=http://localhost:5001

# Email Service (DEV)
RESEND_API_KEY=your_resend_api_key
FROM_EMAIL=DID Optimizer DEV <noreply@yourdomain.com>

# DID Capacity Configuration
DEFAULT_DID_CAPACITY=50

# PayPal Configuration (DEV - sandbox mode)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# Session Secret
SESSION_SECRET=your_session_secret_here

# Rate Limiting (Very permissive for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=99999

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/

# Encryption
ENCRYPTION_KEY=your_encryption_key_here

# Background Scraper Configuration (DEV - disabled or less frequent)
SCRAPER_SCHEDULE=0 0 * * *
SCRAPER_BATCH_SIZE=2
SCRAPER_DELAY_MS=5000
SCRAPER_MAX_CONCURRENT=1
SCRAPER_MAX_DIDS=10
SCRAPER_RETRY_HOURS=48
ENABLE_SCRAPER_DEV=false
RUN_INITIAL_SCRAPE=false

# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_MODEL=mistralai/mistral-7b-instruct:free

# ============================================================================
# DEVELOPMENT-SPECIFIC SETTINGS
# ============================================================================

# Debug Mode
DEBUG=true
VERBOSE_LOGGING=true

# Disable certain features in development
DISABLE_SCRAPER=true
DISABLE_EMAIL=false
DISABLE_PAYMENT=true

# Allow CORS from any origin in development
CORS_ORIGIN=*
